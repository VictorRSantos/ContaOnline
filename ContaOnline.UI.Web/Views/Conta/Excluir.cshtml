@model ContaOnline.Domain.ViewModels.ContaExibirViewModel

@{
    ViewData["Title"] = "Excluir";
}

<h1>Excluir</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>ContaExibirViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Descrição
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Data Vencimento
        </dt>
        <dd class="col-sm-10">
            @Model.DataVencimento.ToString("d")
        </dd>
        <dt class="col-sm-2">
           Valor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Valor)
        </dd>
        @if (Model.DataPagamento.HasValue)
        {
            <dt class="col-sm-2">
                Data Pagamento
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataPagamento)
            </dd>
            <dt class="col-sm-2">
               Desconto
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Desconto)
            </dd>
            <dt class="col-sm-2">
                Descrição Conta Corrente
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContaCorrenteDescricao)
            </dd>
            <dt class="col-sm-2">
                Nome Categoria
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CategoriaNome)
            </dd>
            <dt class="col-sm-2">
                Nome Contato
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContatoNome)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tipo)
            </dd>          
                        
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Acrescimo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Acrescimo)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ValorPago)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ValorPago)
            </dd>
        }
    </dl>
    
    <form asp-action="Excluir">
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
