@model ContaOnline.UI.Web.Models.ContatoViewModel

@{
    ViewData["Title"] = "Incluir";
}

<h1>Incluir</h1>

<h4>Dados do Contato</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Incluir">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telefone" class="control-label"></label>
                <input asp-for="Telefone" class="form-control" />
                <span asp-validation-for="Telefone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                <select id="Tipo" name="Tipo" class="form-control">
                    <option value="Fisica">Pessoa Física</option>
                    <option value="Juridica">Pessoa Jurídica</option>
                </select>
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
           

            <div id="pessoaJuricaContainer" style="display:none">
                <div class="form-group">
                    <label asp-for="CNPJ" class="control-label"></label>
                    <input asp-for="CNPJ" class="form-control" />
                    <span asp-validation-for="CNPJ" class="text-danger"></span>
                </div>
            </div>
            <div id="pessoaFisicaContainer">
                <div class="form-group">
                    <label asp-for="CPF" class="control-label"></label>
                    <input asp-for="CPF" class="form-control" />
                    <span asp-validation-for="CPF" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RG" class="control-label"></label>
                    <input asp-for="RG" class="form-control" />
                    <span asp-validation-for="RG" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="DataNascimento" class="control-label">Nascido em</label>
                <input asp-for="DataNascimento" class="form-control" />
                <span asp-validation-for="DataNascimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Incluir" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Inicio">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script>
        // document.getElementById("Tipo").addEventListener("change", function () {
        //     var tipo = this.value;
        //     var pessoaFisicaContainer = document.getElementById("pessoaFisicaContainer");
        //     var pessoaJuricaContainer = document.getElementById("pessoaJuricaContainer");
        //     if (tipo === "Fisica") {
        //         pessoaFisicaContainer.style.display = "block";
        //         pessoaJuricaContainer.style.display = "none";
        //     } else if (tipo === "Juridica") {
        //         pessoaFisicaContainer.style.display = "none";
        //         pessoaJuricaContainer.style.display = "block";
        //     }
        // });
        // // Trigger change event on page load to set the correct visibility
        // document.getElementById("Tipo").dispatchEvent(new Event('change'));
        $(function (){
            $('#Tipo').change(function (){
                var tipo = $(this).val();
                if (tipo === "Fisica"){
                    $('#pessoaFisicaContainer').show();
                    $('#pessoaJuricaContainer').hide();
                } else if (tipo === "Juridica"){
                    $('#pessoaFisicaContainer').hide();
                    $('#pessoaJuricaContainer').show();
                }
            });
        })
    </script>
}

